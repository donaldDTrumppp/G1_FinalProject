@page
@model Clinic_Management.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h2>User Profile</h2>

<div>
    <label>Username:</label>
    <span>@Model..Username</span>
</div>
<div>
    <label>Name:</label>
    <span>@Model.UserProfile.Name</span>
</div>
<div>
    <label>Date of Birth:</label>
    <span>@Model.UserProfile.Dob.ToShortDateString()</span>
</div>
<div>
    <label>Phone Number:</label>
    <span>@Model.UserProfile.PhoneNumber</span>
</div>
<div>
    <label>Email:</label>
    <span>@Model.UserProfile.Email</span>
</div>
<div>
    <label>Address:</label>
    <span>@Model.UserProfile.Address</span>
</div>
<input type="hidden" value="@Model.UserProfile.UserId" />

<div>
    <a asp-page="/Profile/ChangePassword">Change Password</a>
</div>
