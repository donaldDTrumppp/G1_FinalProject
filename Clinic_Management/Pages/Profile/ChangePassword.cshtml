@page
@model Clinic_Management.Pages.Profile.ChangePasswordModel
@{
}

<div style="padding: 20px 0px 20px 0px">
    <div class="max-w-2xl mx-auto">
        @if (Model.UserProfile != null)
        {
            <input type="hidden" value="@Model.UserProfile.UserId" />
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Change Password for @Model.UserProfile.Name</h2>
        }
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="w-1/2">
                <div class="mb-4">
                    <label asp-for="CurrentPassword" class="block text-gray-700 font-bold mb-1">Current Password:</label>
                    <input asp-for="CurrentPassword" class="border border-gray-300 !text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    <span asp-validation-for="CurrentPassword" class="text-danger" style="color:red"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="NewPassword" class="block text-gray-700 font-bold mb-1">New Password:</label>
                    <input asp-for="NewPassword" class="border border-gray-300 !text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    <span asp-validation-for="NewPassword" class="text-danger" style="color:red"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="block text-gray-700 font-bold mb-1">Confirm New Password:</label>
                    <input asp-for="ConfirmPassword" class="border border-gray-300 !text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger" style="color:red"></span>
                </div>
            </div>
            <div class="flex justify-start mt-6 w-1/2">
                <a asp-page="/Profile/Index" class="bg-white text-blue-700 border border-blue-700 px-4 py-2 rounded-lg hover:bg-blue-50 mr-4">Cancel</a>
                <button type="submit" class="bg-blue-700 text-white px-4 py-2 rounded-lg hover:bg-blue-800">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
